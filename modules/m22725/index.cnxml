            <colspec colnum="7" colname="c7"/>
            <tbody>
              <row>
                <entry>Phrase 1</entry>
                <entry>Thrusts forward</entry>
                <entry/>
                <entry>Less movement and syncopation</entry>
                <entry/>
                <entry>Repetition of previous phrase</entry>
                <entry/>
              </row>
              <row>
                <entry>Phrase 2</entry>
                <entry>Thrusts forward</entry>
                <entry/>
                <entry>Less movement and syncopation</entry>
                <entry/>
                <entry>Repetition of previous phrase</entry>
                <entry/>
              </row>
              <row>
                <entry>Phrase 3</entry>
                <entry>Thrusts forward</entry>
                <entry/>
